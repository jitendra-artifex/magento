<?xml version="1.0"?>
<layout>
<!--
/**
 * @category	Solide Webservices
 * @package		Flexslider
 */
-->
	<default>
		<reference name="root">
			<block type="flexslider/page_html_head" name="flexslider_head" as="flexslider_head"/>
		</reference>
	</default>
	<cms_page>
		<reference name="content">
			<block type="flexslider/content_top" name="flexslider_content_top" template="flexslider/template.phtml" before="-"/>
			<block type="flexslider/content_bottom" name="flexslider_content_bottom" template="flexslider/template.phtml" after="-"/>
		</reference>
	</cms_page>
	<catalog_category_default>
		<reference name="content">
			<block type="flexslider/content_top" name="flexslider_content_top" template="flexslider/template.phtml" before="-"/>
			<block type="flexslider/content_bottom" name="flexslider_content_bottom" template="flexslider/template.phtml" after="-"/>
		</reference>
	</catalog_category_default>
	<catalog_category_layered>
		<reference name="content">
			<block type="flexslider/content_top" name="flexslider_content_top" template="flexslider/template.phtml" before="-"/>
			<block type="flexslider/content_bottom" name="flexslider_content_bottom" template="flexslider/template.phtml" after="-"/>
		</reference>
	</catalog_category_layered>
</layout>